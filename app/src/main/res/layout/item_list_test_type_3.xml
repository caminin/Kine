<?xml version="1.0" encoding="utf-8"?>

<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/nom_test"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10sp"
            android:paddingRight="20sp"
            android:text="test"

            android:textSize="15sp" />

        <EditText
            android:id="@+id/nombre_res_test"
            android:layout_width="60sp"
            android:layout_height="fill_parent"
            android:descendantFocusability="beforeDescendants"
            android:hint="0.0"
            android:inputType="phone">

	    </EditText>

        <TextView
            android:id="@+id/unite_test"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:paddingLeft="20sp"
            android:paddingRight="20sp"
            android:text="test"
            android:textSize="15sp" />
        <Button
            android:id="@+id/button_send_res"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="setResTest3"
            android:minHeight="30dip"
            android:minWidth="30dip"
            android:text="Env"
            android:textSize="11sp" />

    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal" >
    	<TextView
		    android:textSize="14sp"
		   	
		    android:gravity="center_vertical"
	        android:id="@+id/résultat"
            android:paddingLeft="50sp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Résultat :" />
    	
    	<Button
    	    android:textSize="13sp"
    	    android:visibility="invisible"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:minHeight="40dip"
            android:minWidth="40dip"
    	    android:id="@+id/button_cancel"
    	    android:text="X"
    	    android:onClick="cancelTest"/>
    	
    	<TextView 
		    android:paddingLeft="20sp"
		    android:textSize="18sp"
		    android:gravity="center_vertical"
	        android:id="@+id/contenu_résultat"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="" />
			        
	
    </LinearLayout>

</LinearLayout>
